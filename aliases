# List files
alias ls='ls -G'
alias la='ls -lAFh'

# Folders
alias sites="cd ~/Sites"
alias downloads="cd ~/Downloads"
alias desktop="cd ~/Desktop"

# Git
alias st='open -a SourceTree'

# Server
alias restartApache='sudo apachectl restart'
alias editApacheConf='sudo vim /etc/apache2/httpd.conf'
alias editHosts='sudo vim /etc/hosts'
alias editVhosts='sudo vim /etc/apache2/extra/httpd-vhosts.conf'

# Create ctags
alias makectags='`brew --prefix`/bin/ctags -R --exclude=node_modules'

# Pull and prepare boilerplate
function bp () {
    volo create $1 https://github.com/goschevski/fronty/archive/master.zip
	cd $1
    npm i
    gvim .
	gulp watch
}

# Clean install of node modules
function cleaninstall () {
    rm -rf node_modules/
    npm cache clean
    npm i
}

# SSH
alias vps="ssh root@188.40.242.169 -t"

# Path
export PATH=/usr/local/share/python:/user/bin/php:$PATH
